{
  "name": "vertrebot",
  "author": "Verbazend Tredici",
  "version": "1.0.2",
  "description": "Discord bot for Vertredici channel",
  "license": "MIT",
  "main": "./src/index.js",
  "scripts": {
    "start": "pm2-runtime ./src/index.js",
    "dev": "nodemon ./src/index.js"
  },
  "dependencies": {
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "pm2": "^4.5.0"
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "prettier --write",
      "eslint src/**/*.js --fix"
    ]
  }
}
